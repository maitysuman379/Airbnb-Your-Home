<% layout("/layouts/boilerplate") %>
<div class="row">
<div class="col-8 offset-2">
<body style="background-color: aqua;">
    <h3>Create a New Listing</h3>
    <form method="POST" action="/listings">

        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input name="listing[title]" placeholder="enter title" type="text" class="form-control" required/>
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" placeholder="enter description" class="form-control" required></textarea>
        </div>
        
        <div class="mb-3">
            <label for="image" class="form-label">Image Link</label>
            <input name="listing[image]" placeholder="enter image URL/Link" type="text" class="form-control" required/>
        </div>
        
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input name="listing[price]" placeholder="enter price" type="number" class="form-control" required/>
            </div>
            
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">Country</label>
                <input name="listing[country]" placeholder="enter country" type="text" class="form-control" required/>
            </div>
        </div>
        
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input name="listing[location]" placeholder="enter location" type="text" class="form-control" required/>
        </div>

        <div class="mb-3 form-check">
            <input type="checkbox" class="form-check-input" id="exampleCheck1" required>
            <label class="form-check-label" for="exampleCheck1">Check me out</label>
        </div>

        <br/><br/>
        <div class="add-reset">
            <button type="reset" class="btn btn-outline-danger btn-lg">Reset</button>
            <button type="submit" class="btn btn-outline-success btn-lg">Add</button>
        </div>
        

    </form>
</body>
</div>
</div>
